<h1 class="local-users-title">Local Users</h1>
<div id="all-users">
  <% @users.each do |user| %>
    <div class="each-user">
      <div class="user-avatar">
        <%= image_tag user.profile_img.url(:thumb), alt: "#{user.username} avatar" %>
      </div>
      <div class="user-details">
        <%#= link_to  user.username, "users/#{user.id}"%>
        <p><span class="user-name"><%=user.username%></span></p>
        <!-- <p><span>Name: </span><%= user.first_name %></p> -->
        <p class="user-first-name"><%= user.first_name %></p>
        <p class="user-city-state" >
          <% if user.city != nil %>
            <span class="user-info"><%= user.city %>, </span>
          <% end %>
          <span class="user-info"><%= user.state %></span>
        </p>
      </div>
    </div>
  <% end %>
</div>
