<% title "Events" %>
<h1 class="local-events-title">Local Events</h1>
<div class="local-events-title">
  <%= button_to "Host an event", new_event_path, class: "flat-button-green", method: :get %>
</div>
<div id="all-events">
  <% @events.each do |event| %>
    <div class="each-event">
      <div class="event-avatar">
        <a href="<%= event_path(event) %>">
          <%= image_tag "event.png", alt: "#{event.name}" %>
        </a>
      </div>
        <div class="user-details">

          <a href="<%= event_path(event) %>">
            <p><span class="user-name"><%= event.name %></span></p>
          </a>
          <p class="user-city-state" >
            <% if event.city != nil || event.city != "" %>
              <span class="event-info"><%= event.city %>,&nbsp;</span>
            <% end %>
            <span class="event-info"><%= event.state %>&nbsp;<%= event.zip %></span>
          </p>
      </div>
    </div>
  <% end %>
</div>

<%# unless @page == 1 %>
  <%#= link_to 'Previous page', page: @page - 1%>
<%# end %>
<%#= link_to 'Next page', page: @page + 1%>
