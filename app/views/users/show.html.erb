<%= @user.username %>
<img src="<%= @user.profile_img%>" alt="profile pic" />

<%= @user.first_name %>
<%= @user.last_name %>
<%= @user.email %>
<%= @user.country %>
<%= @user.zip %>
<%= @user.address %>
<%= @user.state %>
<%= @user.bio %>
<%= @user.dob %>
<%= @user.steam %>
<%= @user.xbox %>
<%= @user.psn %>
<%= @user.fb %>
<%= @user.twitch %><br />

<% @user.events.each do |event| %>
  <%= event.name %>
  <%= link_to "Event", event_path(event) %>
<% end %>

<% @games.each do |game|%>
  <table>
    <th>
      Game
    </th> <br />
    <tbody>
      <td><br />
          <%= game.title %> <br />
        <img src="<%=game.image%>" alt="game logo" width="100px"/>
      </td>
    </tbody>
  </table>
<% end %>

<% if current_user %>
  <% if current_user.id == @user.id %>
    <%= link_to "Edit", edit_user_path(@user) %>
  <% end %>
<% else %>
  <%= flash[:notice] = "Sign in to edit" %>
<% end %>
